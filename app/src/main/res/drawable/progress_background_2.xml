<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient
                android:endColor="@color/progress_bar_violet_background2"
                android:startColor="@color/progress_bar_violet_background1" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="50dp"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"/>

                <gradient
                     android:endColor="@color/progress_bar_violet_progress"
                    android:startColor="@color/progress_bar_violet_progress" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="0dp" />
                <gradient

                    android:endColor="@color/progress_bar_violet_progress"
                    android:startColor="@color/progress_bar_violet_progress" />
            </shape>
        </clip>
    </item>

</layer-list>